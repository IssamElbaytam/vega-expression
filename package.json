{
  "name": "vega-expression",
  "version": "2.0.0",
  "description": "Vega expression parser and code generator.",
  "repository": {
    "type": "git",
    "url": "http://github.com/vega/vega-expression.git"
  },
  "author": {
    "name": "Jeffrey Heer",
    "url": "http://idl.cs.washington.edu"
  },
  "license": "BSD-3-Clause",
  "devDependencies": {
    "eslint": "^2.9.0",
    "json2module": "0.0",
    "rollup": "0.25",
    "tape": "4",
    "chai": "^3.0.0",
    "istanbul": "latest",
    "mocha": "^2.2.5",
    "uglify-js": "^2.4.24"
  },
  "main": "build/expression.js",
  "jsnext:main": "index.js",
  "scripts": {
    "lint": "eslint index.js src",
    "build": "rm -rf build && mkdir build && json2module package.json > build/package.js && node_modules/.bin/rollup -f umd -n vega_expression -o build/expression.js -- src/index.js",
    "pretest": "npm run build",
    "test": "mocha --recursive test/ && npm run lint",
    "cover": "istanbul cover _mocha -- --recursive test/",
    "postinstall": "npm run build"
  }
}
